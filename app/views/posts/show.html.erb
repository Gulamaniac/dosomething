<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>


<% if can? :update, @post %>
  <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_post_path(@post)  %>
<% end %>
