
  <div class="vertical-center">
    <div class="jumbotron-center">
      <p class="jumbo-title"> <span class="jumbo-user-name"><%= current_user.name %></span> </p>
      <span class="jumbo-content">Did you already do something today? :)</span><br><br>

      <%= link_to 'Share', '#animatedModal', class: 'btn btn-raised btn-primary btn-lg' , id: 'new'%>
      <%= link_to 'Explore', list_posts_path , class: 'btn btn-raised btn-primary btn-lg' %>

    </div>

      <div id="animatedModal" >
          <div class="close-animatedModal">
            x
          </div>

          <div style="" class="modal-content vertical-center ">
            <div class="jumbotron-center">
            <%= form_for(@post) do |f| %>
              <% if @post.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

                  <ul>
                  <% @post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="form-group label-static">
                <p class="jumbo-content">Thank you for your interest. <br>
                                          Getting started is easy â€“ just fill in the blanks below <br>
                                          and get to see all your posts. How exciting!</p>
                <%= f.text_field :title, class: 'modal-textfield', placeholder: 'Write Something Here . . .' %>

              </div>

              <div class="actions">
                <%= f.submit class: 'btn btn-danger btn-raised' %>
              </div>


            </div>

            <% end %>

          </div>
      </div>
  </div>
  <%= javascript_include_tag 'animatedModal' , 'data-turbolinks-track' => true %>
  <script>
    $("#new").animatedModal({
      animatedOut:'bounceOut',
      color:'#A26BEF'
    });

  </script>
