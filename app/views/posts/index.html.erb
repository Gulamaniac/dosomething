

<div class="container container-posts">
  <div id="circle"><span>Jump & Smile</span></div>
  <div class="row">
    <div class="col-lg-12">
      <%= link_to 'New Post', new_post_path, class: "btn btn-raised btn-primary pull-right" %><br>
      <% @posts.each do |post| %>
      <div class="list-item-container">
        <div class="list-item-header">
          <b>
            <h1 class="list-item-title">
              <%= link_to post.title.html_safe, post  %>
              <% if can? :update, post %>
              <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_post_path(post)  %>
              <% end %>
              <% if can? :destroy, post %>
              <%= link_to '<i class="fa fa-trash"></i>'.html_safe, post, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </h1>

          </b>
          <span>
            Wordings By: <%= link_to post.user.email, home_path(post.user.id) %>
          </span>
        </div>

        <div class="list-item-content">
          <%= post.content %>
        </div>
        <hr>
      </div>
      <% end %>
    </div>
  </div>
</div>
<br>
