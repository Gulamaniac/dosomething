
<h1 class="caption">Jump & Smile</h1>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% @posts.each do |post| %>

      <div class="list-item-container">

        <div class="list-item-header">
          <b><h1 class="list-item-item"><%= link_to post.title.html_safe, post  %></h1></b>
          <span>
            Wordings By: Author Placeholder

            <%= link_to 'Edit', edit_post_path(post)  %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          </span>
        </div>

        <div class="list-item-content">
          <%= post.content %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<br>

<%= link_to 'New Post', new_post_path %>
