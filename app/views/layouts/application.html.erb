<!DOCTYPE html>
<html>
<head>
  <title>Dosomething</title>

  <%= stylesheet_link_tag    'http://fezvrasta.github.io/bootstrap-material-design/dist/css/bootstrap-material-design.css' %>
  <%= stylesheet_link_tag    'http://fezvrasta.github.io/bootstrap-material-design/dist/css/ripples.min.css' %>
  <%= stylesheet_link_tag    '//cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.0/animate.min.css' %>
  <%= stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Roboto:300,400,500,700' %>
  <%= stylesheet_link_tag    'application' , 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css' , 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' , 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>

<style>

</style>


<body style="
justify-content: center;">

<% if user_signed_in? %>

        <div class="item-right">
          <span><%= current_user.email %></span>
          <%= link_to '<i style="font-size:20px" class="fa fa-power-off"></i>'.html_safe, destroy_user_session_path, method: :delete %>
        </div>

<% end %>

<%= yield %>

<div id="snackbar"></div>


</body>

<%= javascript_include_tag    'snackbar' , 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'http://fezvrasta.github.io/bootstrap-material-design/dist/js/material.min.js'  %>
<%= javascript_include_tag 'http://fezvrasta.github.io/bootstrap-material-design/dist/js/ripples.min.js'  %>

</html>

<script>
  $(function () {
    $.material.init();
  });

  $( document ).ready(function() {
    var content = "<%= notice %>"
    if (content){
      var snackbar = document.getElementById("snackbar")
      snackbar.innerHTML = content
      snackbar.className = "show";
      setTimeout(function(){ snackbar.className = snackbar.className.replace("show", ""); }, 3000);
    }

  });

</script>
